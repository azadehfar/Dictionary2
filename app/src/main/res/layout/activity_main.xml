<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4870d6"


    tools:context=".MainActivity">

    <LinearLayout android:layout_width="fill_parent"
        android:id="@+id/linearLayout1"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Word"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="270dp"
            android:hint="dictionary word"
            android:inputType="text">
        </EditText>


        <Button
            android:id="@+id/History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:drawableEnd="@android:drawable/ic_menu_recent_history"
            />

        <Button
            android:id="@+id/Fetch"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"

            android:drawableEnd="@android:drawable/ic_menu_search"

            >
        </Button>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp">


        <TextView
            android:id="@+id/EnglishTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/English"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:autoLink="all"

            />



        <TextView
            android:id="@+id/GermanTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/German"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:autoLink="all"
            />

        <TextView
            android:id="@+id/SpanishTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Spanish"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:autoLink="all"
            />

        <TextView
            android:id="@+id/FrenchTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/French"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            android:autoLink="all"
            />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:layout_below="@+id/linearLayout2">





        <View
            android:id="@+id/focus"
            android:layout_width="90dp"
            android:layout_height="4dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="Result"


            />


    </LinearLayout>

</RelativeLayout>